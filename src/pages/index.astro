---
import BaseLayout from "../layouts/BaseLayout.astro";
import AcknowledgmetFooter from "../components/AcknowledgmetFooter.svelte";
import IndexCard from "../components/IndexCard";
import config from "../json/config.json" assert { type: "json" };

const { acknowledgments, websiteSource, resume, events } = config;
---

<BaseLayout>
  <div class="flex flex-col w-screen h-screen items-center">
    <div class="flex flex-col md:flex-row gap-4 m-4 md:mt-24">
      <IndexCard client:only {resume} {websiteSource} {events} />
    </div>
    <footer class="mt-auto w-full">
      <AcknowledgmetFooter {acknowledgments} />
    </footer>
  </div>
</BaseLayout>
